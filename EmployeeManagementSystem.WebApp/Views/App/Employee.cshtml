
@{
    Layout = "App_Layout";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Employee Actions</h1>

    </div>

<!-- Content Row -->
<div class="row">

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-12 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Active Personel</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"><b id="employeeCount"></b></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <button class="btn btn-sm btn-primary shadow-sm" data-toggle="modal" data-target="#newEmployeeModal"><i class="fas fa-user-plus fa-sm text-white-50"></i> New Employee</button>
        <a class="btn btn-sm btn-danger shadow-sm" href="~/App/Payment"><i class="fas fa-dollar-sign fa-sm text-white-50"></i> Employee Payments</a>
    </div>
    <div class="col-12 mt-3">
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Employee List</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="employeDataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Department</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Department</th>
                            <th>Action</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="newEmployeeModal" tabindex="-1" aria-labelledby="newEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newEmployeeModalLabel">New Employee Add</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="employeeForm">
                    <div class="mb-3">
                        <label for="departmentSelect" class="form-label">Department</label>
                        <select class="form-control" id="departmentSelect" name="department" required>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="nameInput" class="form-label">Name</label>
                        <input type="text" class="form-control" id="nameInput" name="name" placeholder="Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="surnameInput" class="form-label">Surname</label>
                        <input type="text" class="form-control" id="surnameInput" name="surname" placeholder="Surname" required>
                    </div>
                    <div class="form-group">
                        <label for="salaryInput">Salary</label>
                        <input type="number" class="form-control" id="salaryInput" required>
                    </div>
                    <div class="mb-3">
                        <label for="phoneInput" class="form-label">Phone</label>
                        <input type="tel" class="form-control" id="phoneInput" name="phone" placeholder="Telefon" required>
                    </div>
                    <div class="mb-3">
                        <label for="emailInput" class="form-label">E-Mail</label>
                        <input type="email" class="form-control" id="emailInput" name="email" placeholder="E-posta">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </form>
            </div>
      
        </div>
    </div>
</div>
<div class="modal fade" id="employeeDetailModal" style="z-index: 1050 !important;" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog record-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleeEmployeeFullName"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmEmployeeInfoEdit">
                    <div class="row">

                        <div class="col-4">
                            <input type="text" class="form-control" id="dtEmployeeId" aria-describedby="emailHelp" hidden>

                            <div class="mb-3">
                                <label for="dtEmployeedepartmentSelect" class="form-label">Departman</label>
                                <select class="form-control" id="dtEmployeedepartmentSelect" name="department" required>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="dtEmployeeName">Firstname</label>
                                <input type="text" class="form-control" id="dtEmployeeName" aria-describedby="emailHelp" required>
                            </div>
                            <div class="form-group">
                                <label for="dtEmployeeSurname">Lastname</label>
                                <input type="text" class="form-control" id="dtEmployeeSurname" aria-describedby="emailHelp" required>
                            </div>
                            <div class="form-group">
                                <label for="dtEmployeeSalary">Salary</label>
                                <input type="text" class="form-control" id="dtEmployeeSalary" required>
                            </div>
                            <div class="form-group">
                                <label for="dtEmployeePhone">Phone</label>
                                <input type="text" class="form-control" id="dtEmployeePhone" aria-describedby="emailHelp" required>
                            </div>
                            <div class="form-group">
                                <label for="dtEmployeeEmail">E-Mail</label>
                                <input type="text" class="form-control" id="dtEmployeeEmail" aria-describedby="emailHelp">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block" style="margin-top: 7px;"><i class="fas fa-check"></i> Update</button>
                            </div>
                            <div id="btnemployeeDetailRemoveArea" class="form-group">
                            </div>
                        </div>
                        <div class="col-8 mt-3">
                            <div id="btnemployeeDetailPaymentAdding" class="form-group mt-2">
                            </div>
                            <h1>Employee Payment List</h1>
                            <div class="table-responsive">
                                <table class="table table-bordered" id="paymentOfEmployee" width="100%" cellspacing="0">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tfoot>
                                    <tr>
                                        <th>ID</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        <th>Action</th>
                                    </tr>
                                    </tfoot>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>

                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/js/Actions/Employee.js" type="module">
    </script>
}
